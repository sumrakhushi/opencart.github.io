<div class="box carousel brand mt-100">
	<div class="container">	
		<div class="page-title hidden">
			<h3>{{ heading_title }}</h3>
		</div>	
		<div class="swiper-viewport">
			<div id="carousel{{ module }}" class="swiper-container">
				<div class="swiper-wrapper">
					{% for banner in banners %}
						<div class="swiper-slide col-sm-12">
							<div class="text-center">
								{% if banner.link %}
									<a href="{{ banner.link }}"><img src="{{ banner.image }}" alt="{{ banner.title }}" class="img-responsive m-auto" /></a>
								{% else %}
									<img src="{{ banner.image }}" alt="{{ banner.title }}" class="img-responsive m-auto" />
								{% endif %}
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
			<div class="swiper-pagination carousel{{ module }}"></div>
			<div class="swiper-pager">				
				<div class="swiper-button-prev"><i class="fa fa-angle-left"></i></div>
				<div class="swiper-button-next"><i class="fa fa-angle-right"></i></div>
			</div>	
		</div>
	</div>
</div>
<script>

var swiper = new Swiper("#carousel{{ module }}", {
	mode: 'horizontal',
	slidesPerView: 7,
	loop: true,
	paginationClickable: false,
	nextButton: '.swiper-button-next',
	prevButton: '.swiper-button-prev',
	autoplayDisableOnInteraction: true,
	autoplay: {
	    delay: 4000,
	},
	pagination: {
      	el: ".swiper-pagination",
      	clickable: true,
      	renderBullet: function (index, className) {
        	return '<span class="' + className + '">' + (index + 1) + "</span>";
      	},
    },
	breakpoints: {
		1601: {
			slidesPerView: 7,
			spaceBetween: 0
		},
		1200: {
			slidesPerView: 6,
			spaceBetween: 0
		},
		992: {
			slidesPerView: 5,
			spaceBetween: 0
		},
		681: {
			slidesPerView: 4,
			spaceBetween: 0
		},
		481: {
			slidesPerView: 3,
			spaceBetween: 0
		},
		320: {
			slidesPerView: 2,
			spaceBetween: 0
		},
		319: {
			slidesPerView: 1,
			spaceBetween: 0
		}
	},
});

</script>