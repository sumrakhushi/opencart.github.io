<div class="box all-products mt-100">
	<div class="container">
		<div class="box-heading">
			<div class="box-content bestseller" >
				<div class="page-title toggled"><h3>{{ heading_title }}</h3></div>	
				<div class="block_box row">
					{% set productForSlider = 1 %}
					{% set productCount = products|length %}
						<div id="bestseller-carousel" class="box-product {% if productCount > productForSlider %} product-carousel {% endif %} clearfix" data-items="4">
							{% for product in products %}
								{% if productCount > productForSlider %}
									{% set class = ' col-xs-12' %}
								{% else %}
									{% set class = ' col-lg-3 col-md-4 col-sm-4 col-xs-4' %}
							{% endif %}
							<div class="product-layout {{class}}">
								<div class="product-thumb transition clearfix">
									<div class="image">
										{% if product.thumb_swap %}
											<a href="{{ product.href }}">
												<img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive" />
												<img class="img-responsive hover-img" src="{{ product.thumb_swap }}" title="{{ product.name }}" alt="{{ product.name }}"/>
											</a>
										{% else %}
											<a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive" /></a>
										{% endif %}
										{% if  product.special %}
											<div class="sale-text"><span class="section-sale">-{{ product.percent }}%</span></div>
										{% endif %}
										<div class="button-group">
											<button type="button" class="wishlist" data-toggle="tooltip" title="{{ button_wishlist }}" onclick="wishlist.add('{{ product.product_id }}');"><i class="icon-heart"></i></button>
											<button type="button" data-toggle="tooltip" class="quickview-button" title="{{ button_quickview }}" onclick="quickView.ajaxView('?route=product/quickview&product_id={{ product.product_id }}');"><i class="icon-eye"></i></button>
											<button type="button" class="compare hidden" data-toggle="tooltip" title="{{ button_compare }}" onclick="compare.add('{{ product.product_id }}');"><i class="icon-change"></i></button>
											<button type="button" class="addcart-btn" data-toggle="tooltip" title="{{ button_cart }}" onclick="cart.add('{{ product.product_id }}')"><i class="icon-shopping-cart-1"></i></button>
										</div>
										<button type="button" class="addcart" title="{{ button_cart }}" onclick="cart.add('{{ product.product_id }}')">{{ button_cart }}</button>
									</div>
									<div class="thumb-description clearfix">
										<div class="caption">
											{% if product.rating %}
												<div class="rating">
													{% for i in 1..5 %}
														{% if product.rating < i %} <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-2x"></i></span> {% else %} <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span> {% endif %}
													{% endfor %}
												</div>
											{% else %}
												<div class="rating">
													{% for i in 1..5 %}
														<span class="fa fa-stack"><i class="fa fa-star-o fa-stack-2x"></i></span>
													{% endfor %}
												</div>
											{% endif %}
											<h4 class="product-title"><a href="{{ product.href }}">{{ product.name }}</a></h4>
											{% if product.price %}
												<p class="price">
													{% if not product.special %}
														{{ product.price }}
													{% else %}
														<span class="price-new">{{ product.special }}</span><span class="price-old">{{ product.price }}</span>
													{% endif %}
												</p>
											{% endif %}
											<div class="rating-list">
												{% if product.rating %}
													<div class="rating">
														{% for i in 1..5 %}
															{% if product.rating < i %} <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-2x"></i></span> {% else %} <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span> {% endif %}
														{% endfor %}
													</div>
												{% else %}
													<div class="rating">
														{% for i in 1..5 %}
															<span class="fa fa-stack"><i class="fa fa-star-o fa-stack-2x"></i></span>
														{% endfor %}
													</div>
												{% endif %}	
											</div>										
										</div>
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>